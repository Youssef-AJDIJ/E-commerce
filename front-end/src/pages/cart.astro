---
import Layout from "../layouts/Layout.astro";
---
<Layout>

<main class="container cart-section">
  <nav class="breadcrumb">Home / Cart</nav>
  
  <table class="cart-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <tr class="cart-item">
        <td><img src="/monitor.png" width="50" /> LCD Monitor</td>
        <td>$650</td>
        <td><input type="number" value="1" min="1" /></td>
        <td>$650</td>
      </tr>
    </tbody>
  </table>
  
  <div class="cart-actions">
    <button class="btn-outline">Return To Shop</button>
    <button class="btn-outline">Update Cart</button>
  </div>
  
  <div class="cart-bottom">
    <div class="coupon">
      <input type="text" placeholder="Coupon Code" />
      <button class="btn-primary">Apply Coupon</button>
    </div>
    <div class="cart-total-card">
      <h3>Cart Total</h3>
      <div class="total-row"><span>Subtotal:</span><span>$1750</span></div>
      <div class="total-row"><span>Shipping:</span><span>Free</span></div>
      <div class="total-row last"><span>Total:</span><span>$1750</span></div>
      <button class="btn-primary">Procees to checkout</button>
    </div>
  </div>
</main>

</Layout>
<style>
  /* Contenedor y Navegación */
  .container {
    max-width: 1170px;
    margin: 80px auto;
    padding: 0 20px;
  }

  .breadcrumb {
    margin-bottom: 40px;
    color: #000;
    font-size: 14px;
    opacity: 0.5;
  }

  /* Tabla de Productos */
  .cart-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 30px; /* Espacio entre filas */
    margin-top: -30px;
  }

  .cart-table th {
    padding: 24px;
    text-align: left;
    font-weight: 400;
    background: white;
    box-shadow: 0px 1px 13px 0px rgba(0, 0, 0, 0.05);
  }

  .cart-item td {
    padding: 24px;
    background: white;
    box-shadow: 0px 1px 13px 0px rgba(0, 0, 0, 0.05);
    vertical-align: middle;
  }

  /* Estilo para la cantidad (Input) */
  .cart-item input {
    width: 72px;
    padding: 8px;
    border: 1.5px solid #0000004d;
    border-radius: 4px;
    text-align: center;
  }

  /* Acciones (Botones de abajo de la tabla) */
  .cart-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
  }

  .btn-outline {
    background: transparent;
    border: 1px solid #00000080;
    padding: 16px 48px;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: 0.3s;
  }

  .btn-outline:hover {
    background: #000;
    color: #fff;
  }

  /* Sección Inferior (Cupón y Total) */
  .cart-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 80px;
    gap: 20px;
  }

  .coupon {
    display: flex;
    gap: 16px;
  }

  .coupon input {
    border: 1px solid #000;
    padding: 16px 24px;
    border-radius: 4px;
    width: 300px;
  }

  .btn-primary {
    background-color: #DB4444;
    color: white;
    padding: 16px 48px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    transition: 0.3s;
  }

  .btn-primary:hover {
    background-color: #e03a3a;
  }

  /* Tarjeta de Total */
  .cart-total-card {
    border: 1.5px solid black;
    padding: 32px 24px;
    border-radius: 4px;
    width: 470px;
  }

  .cart-total-card h3 {
    margin-bottom: 24px;
    font-size: 20px;
    font-weight: 500;
  }

  .total-row {
    display: flex;
    justify-content: space-between;
    padding: 16px 0;
    border-bottom: 1px solid #0000004d;
    font-size: 16px;
  }

  .total-row.last {
    border-bottom: none;
    font-weight: 500;
  }

  .cart-total-card .btn-primary {
    display: block;
    margin: 24px auto 0;
    width: fit-content;
  }
</style>
